<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mau.db.Neo4jProject.MainViewController">
   <center>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Articles:" />
                  <ListView fx:id="articleListView" prefWidth="0.0" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </ListView>
                  <FlowPane hgap="5.0" prefHeight="0.0" prefWidth="0.0" vgap="5.0">
                     <children>
                        <Button fx:id="newArticleButton" mnemonicParsing="false" onAction="#onNewArticle" text="New Article" />
                        <Button mnemonicParsing="false" onAction="#onEditArticle" text="Edit Article" />
                        <Button mnemonicParsing="false" onAction="#onRemoveArticle" text="Remove Article" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </FlowPane>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefWidth="0.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Reference Direction:" />
                  <Button fx:id="directionButton" mnemonicParsing="false" onAction="#onChangeDirection" text="-&gt;">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Button>
                  <Label text="Steps:" />
                  <Spinner fx:id="stepsSpinner" editable="true" />
                  <TextField fx:id="filterTextField" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <Label text="References:" />
                  <ListView fx:id="referenceListView" prefWidth="0.0" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </ListView>
                  <Label text="Info:" />
                  <TextArea fx:id="infoTextArea" editable="false" prefWidth="0.0" wrapText="true" />
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
